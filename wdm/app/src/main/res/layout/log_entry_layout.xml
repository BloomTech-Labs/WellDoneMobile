<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeWidth="0.5dp"
    app:strokeColor="@android:color/black"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:weightSum="8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <TextView
            android:textAlignment="center"
            android:layout_weight="1"
            android:id="@+id/tv_date_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13/09/2019"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:textAlignment="center"
            android:layout_weight="1"
            android:id="@+id/tv_last_modified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13/10/2019"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/img_status"
            android:layout_height="20dp"
            android:layout_width="0dp"
            android:src="@drawable/pump_no_data" />

        <TextView
            android:layout_weight="4"
            android:id="@+id/tv_comments"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="The pump was not working and it needed repairs"
            android:textAlignment="center"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:paddingBottom="15dp"/>

        <ImageButton
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_delete_black_24dp"
            android:id="@+id/imageButton_deleteLog"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
